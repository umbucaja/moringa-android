<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants" >


    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        cardUseCompatPadding="true">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_margin="5dp"
            >

            <ImageButton
                android:layout_margin="5dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/imageButtonDeleteField"
                android:background="@android:color/transparent"
                android:src="@drawable/github"
                android:scaleType="fitCenter"
                android:gravity="center_vertical"
                android:adjustViewBounds="true"
                android:onClick="deleteBatchField"
                android:padding="1dip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="New Text"
                android:id="@+id/textViewBarcodeField"
                android:textSize="20dp"
                android:textStyle="bold"
                android:dividerHeight="2dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButtonDeleteField"
                android:layout_toEndOf="@+id/imageButtonDeleteField" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>



    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray" />





</RelativeLayout>